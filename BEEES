<script src = "https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"> <!This imports the graph extension!>
</script>
    
   
   <canvas id="Mychart1" style="width:100%;max-width:800px"></canvas> <!Creates the outline for the chart in HTML!>

<script> <!First Line Chart!>
var xValues = ['1:00 am March 10th','6:00 am march 10th', '12:00 pm march 10th','1:00 am march 11th', '6:00 am march 11th','12:00 pm march 11th,']
var yValues = [23.4,24.5,24.3,25.5,25.5,26.0]<!Temperature Values!>
var myChart = new Chart("Mychart1", {
  type: "line",
  data: { labels: xValues,
    datasets: [{
        label: "Temperature",
        backgroundColor: "rgba(0,0,0,0.1)",
      borderColor: "FF0000",
      data: yValues
  }]},
  options: {}
});
</script>

<canvas id="Mychart2" style="width:100%;max-width:800px", <!text-align: right></canvas> <Outline in HTML for second graph!>

<script> <!Graph NUMBER 2!!>

var xValues = ['1:00 am March 10th','6:00 am march 10th', '12:00 pm march 10th','1:00 am march 11th', '6:00 am march 11th','12:00 pm march 11th,']
var yValues = [4.5,4.3,4.6,4.7,4.6,4.6,]
var myChart = new Chart("Mychart2", {
  type: "line",
  data: { labels: xValues,
    datasets: [{
        label: "Humidity",
        backgroundColor: "rgba(0,0,0,0.1)",
      borderColor: "#00FFFF",
      data: yValues
  }]},
  options: {}
});
</script>
